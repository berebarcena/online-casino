<!DOCTYPE html>
<%- include('partials/head', { title: 'Buy Credits' }) %>

<body>
  <%- include('partials/navigation') %>
  <h1>Buy credits</h1>

  <form method="POST" action="/credits/add" autocomplete="off">
    <div class="form-field">
      <label for="credit-amount"> Select the amount of credits </label>
      <select name="creditAmount" required>
        <option value="10">10</option>
        <option value="20">20</option>
        <option value="50">50</option>
        <option value="100">100</option>
        <option value="200">200</option>
        <option value="500">500</option>
      </select>
    </div>
    <h3>Your credit card information</h3>
    <div class="form-field">
      <label for="card-num">Card Number</label>
      <input type="text" maxlength="16">

    </div>
    <div class="form-field">
      <label for="card-name">Name on Card</label>
      <input type="text" id="card-name">
    </div>
    <div class="form-field">
      <label for="expiry">Expiry Date</label>
      <input type="text" class="month" id="expiry" placeholder="02">
      <input type="text" class="year" id="" placeholder="2018">
    </div>
    <div class="form-field">
        <label for="csv">CSV</label>
        <input type="text" class="csv" id="csv">
    </div>
    <button type="submit" >Buy </button>
  </form>
</body>


</html>